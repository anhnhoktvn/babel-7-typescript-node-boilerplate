{
  "name": "babel-7-typescript-node-boilerplate",
  "version": "1.0.0",
  "description":
    "A simple boilerplate for a Node.js project with TypeScript support, Jest testing and Webpack bundling using Babel 7.",
  "main": "index.js",
  "author": "Kennie J. Davis",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "yarn clean",
    "build": "webpack --config ./webpack.config.js --progress --color --display-error-details",
    "clean": "rimraf dist",
    "start": "babel-node --extensions '.ts' index.ts",
    "test": "jest"
  },
  "jest": {
    "moduleDirectories": ["./node_modules", "./src"],
    "moduleFileExtensions": ["js", "ts"],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)(spec|test).ts"]
  },
  "dependencies": {
    "rxjs": "^6.1.0",
    "superagent": "^3.8.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/node": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-typescript": "^7.0.0-beta.46",
    "@types/jest": "^22.2.3",
    "@types/node": "^10.0.4",
    "@types/superagent": "^3.5.8",
    "babel-loader": "^8.0.0-beta.2",
    "jasmine-marbles": "^0.3.1",
    "jest": "^22.4.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.5",
    "typescript": "^2.8.3",
    "webpack": "^4.8.0",
    "webpack-cli": "^2.1.3",
    "webpack-node-externals": "^1.7.2"
  }
}
